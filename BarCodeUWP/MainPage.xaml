<Page
    x:Class="BarCodeUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BarCodeUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
     Height="500" Width="600"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    >

   <StackPanel>
      <local:GroupBoxControl Header="Cross Reference Spreadsheet">
         <local:GroupBoxControl.CustomContent>
            <StackPanel x:Name="CrossRefPanel" Style="{StaticResource StackPanelStyle}">
               <Button x:Name="OpenCrossReferenceButton" Click="OpenCrossReferenceButton_Click" Style="{StaticResource ButtonStyle}">Open spreadsheet</Button>
               <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelStyle}">
                  <!--<Label Style="{StaticResource LabelStyle}">Filename</Label>-->
                  <TextBox x:Name="CrossReferenceFileName" Style="{StaticResource FileNameTextBoxStyle}" Width="450"></TextBox>
               </StackPanel>
            </StackPanel>
         </local:GroupBoxControl.CustomContent>
      </local:GroupBoxControl>
   </StackPanel>
</Page>
