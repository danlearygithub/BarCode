<UserControl x:Class="BarCode.ConsoleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BarCode"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   <Grid Margin="5">
      <ScrollViewer VerticalScrollBarVisibility="Auto" DockPanel.Dock="Bottom" Name="_MessageScroller" local:ScrollViewerEx.AutoScrollToEnd="True">
         <StackPanel Name="_Panel" VerticalAlignment="Top"/>
      </ScrollViewer>
   </Grid>
</UserControl>
